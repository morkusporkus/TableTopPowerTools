@page "/"

<MudGrid>
    <MudItem xs="6">
        <MudText Typo="Typo.h3">
            Creatures
        </MudText>
    </MudItem>
    <MudItem xs="6" Class="d-flex justify-end align-center">
        <MudButton Variant="Variant.Outlined" Color="Color.Info" StartIcon="@Icons.Material.Outlined.ImportContacts" Href="/import">
            Bulk Import
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" StartIcon="@Icons.Material.Outlined.ImportContacts" Href="/create">
            Create
        </MudButton>
    </MudItem>
    <MudItem xs="12">
        <MudDivider />
    </MudItem>
    <MudItem xs="12">
        <MudTable Items="@_response.Creatures" Dense="true">
            <HeaderContent>
                <MudTh></MudTh>
                <MudTh>Name</MudTh>
                <MudTh>CR</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>
                    <MudIconButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Error" Icon="@Icons.Material.Outlined.Delete" OnClick="@(() => DeleteCreatureAsync(context.Id))" />
                </MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="CR">@context.Cr</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudItem>
</MudGrid>