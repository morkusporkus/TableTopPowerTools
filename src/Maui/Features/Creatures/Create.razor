@page "/create"
@using TabletopPowerTools.Maui.Features.Creatures.Shared.CreatureDetail;
@using TabletopPowerTools.Core.Models;

<MudForm Model="@creatureViewModel">
<MudTabs Outlined="true" Position="Position.Top" Rounded="true" Border="true"
         ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-6">
    <MudTabPanel Text="Base Info">
        <MudGrid>
        <MudItem xs="9">
        <MudPaper Class="pa-4">

                <MudTextField T="string" @bind-Value="creatureViewModel.Name" Label="Name" Required="true" RequiredError="Name is required!" />
                        <MudTextField T="string" @bind-Value="creatureViewModel.Alignment" Label="Alignment" Required="true" RequiredError="Alignment is required!" />
                <MudTextField T="string" @bind-Value="creatureViewModel.Cr" Label="CR" Required="true" RequiredError="CR is required!" />
                <MudTextField T="int" @bind-Value="creatureViewModel.Speed" Label="Speed" Required="true" RequiredError="Speed is required!"/>
                <MudTextField T="string" @bind-Value="creatureViewModel.Size" Label="Size" Required="true" RequiredError="Size is required!" />
                <MudTextField T="int" @bind-Value="creatureViewModel.HitDice" Label="Hit Dice" Required="true" RequiredError="Hit Dice is required!" />
                        <MudTextField T="int" @bind-Value="creatureViewModel.Armor.BaseArmorClass" Label="Base Armor Class" Required="true" RequiredError="Base Armor Class is required!" />
                        <MudSelect @bind-Value="creatureViewModel.Armor.ArmorClassType" Label="Armor Type" AdornmentColor="Color.Secondary" >
                            @foreach (ArmorType item in Enum.GetValues(typeof(ArmorType)))
                            {
                                <MudSelectItem Value="@item">@item</MudSelectItem>
                            }
               </MudSelect> 
              <MudTextField T="int" @bind-Value="creatureViewModel.Armor.Shield.ArmorClass" Label="Shield Armor Class" />


        </MudPaper>
    </MudItem>
    <MudItem xs="3">
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Strength" Label="Strength" Required="true" RequiredError="Strength is required!" />
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Dexterity" Label="Dexterity" Required="true" RequiredError="Dexterity is required!" />
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Constitution" Label="Constitution" Required="true" RequiredError="Constitution is required!" />
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Intelligence" Label="Intelligence" Required="true" RequiredError="Intelligence is required!" />
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Wisdom" Label="Wisdom" Required="true" RequiredError="Wisdom is required!" />
                    <MudTextField T="int" @bind-Value="creatureViewModel.AbilityScores.Charisma" Label="Charisma" Required="true" RequiredError="Charisma is required!" />
        </MudItem>
</MudGrid>

    </MudTabPanel>
