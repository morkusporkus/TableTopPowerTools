@using DMPowerTools.Core.Models;

<MudItem xs="1">
    <MudText Typo="Typo.h6" Color="ModifierColor">@Modifier</MudText>
    <MudText Typo="Typo.h5">@Name</MudText>
    <MudNumericField @bind-Value=@RawPoints ReadOnly=@ReadOnly/>
</MudItem>

@code {
    [Parameter, EditorRequired] public int RawPoints { get; set; }
    [Parameter, EditorRequired] public string Name { get; set; }
    [Parameter] public bool ReadOnly { get; set; } = true;

    private int Modifier => Creature.CalculateAbilityScoreModifier(RawPoints);
    private Color ModifierColor => Modifier >= 0 ? Color.Success : Color.Error;
}
