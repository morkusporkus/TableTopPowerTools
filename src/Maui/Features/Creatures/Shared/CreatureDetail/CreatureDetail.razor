
<MudGrid>
    <MudItem xs="12">
        @if (@ReadOnly)
        {
            <MudText Typo="Typo.h4">@_response.Creature.Name</MudText>
        }
        else
        {
            <MudTextField Variant="Variant.Text" @bind-Value="@_response.Creature.Name" />

        }

    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h6">Abilities</MudText>
        <MudGrid>
            @foreach (var ability in _response.Creature.Abilities)
            {
                <CreatureProperty Title="@ability.Name" Description="@ability.Desc" ReadOnly=@ReadOnly/>
            }
        </MudGrid>

        <MudText Typo="Typo.h6">Actions</MudText>
        <MudGrid>
            @foreach (var action in _response.Creature.Actions)
            {
                <CreatureProperty Title="@action.Name" Description="@action.Desc" ReadOnly=@ReadOnly />
            }
        </MudGrid>       
        
        <MudText Typo="Typo.h6">Attributes</MudText>
        <MudGrid>
            <AbilityScore Name="STR" RawPoints="@_response.Creature.AbilityScores.Strength" />
            <AbilityScore Name="DEX" RawPoints="@_response.Creature.AbilityScores.Dexterity" />
            <AbilityScore Name="CON" RawPoints="@_response.Creature.AbilityScores.Constitution" />
            <AbilityScore Name="WIS" RawPoints="@_response.Creature.AbilityScores.Wisdom" />
            <AbilityScore Name="CHA" RawPoints="@_response.Creature.AbilityScores.Charisma" />
            <AbilityScore Name="INT" RawPoints="@_response.Creature.AbilityScores.Intelligence" />
        </MudGrid>
    </MudItem>
</MudGrid>
