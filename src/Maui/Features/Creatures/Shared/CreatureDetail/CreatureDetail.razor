<MudGrid>
    <MudItem xs="12">
        @if (@ReadOnly)
        {
            <MudText Typo="Typo.h4">@Creature.Name</MudText>
        }
        else
        {
            <MudTextField Variant="Variant.Text" @bind-Value="Creature.Name" />
        }

    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h6">Abilities</MudText>
        <MudGrid>
            @foreach (var ability in Creature.Abilities)
            {
                <CreatureProperty @bind-Title="ability.Name" @bind-Description="ability.Desc" ReadOnly=ReadOnly/>
            }
        </MudGrid>

        <MudText Typo="Typo.h6">Actions</MudText>
        <MudGrid>
            @foreach (var action in Creature.Actions)
            {
                <CreatureProperty @bind-Title="action.Name" @bind-Description="action.Desc" ReadOnly=ReadOnly />
            }   
        </MudGrid>       
        
        <MudText Typo="Typo.h6">Attributes</MudText>
        <MudGrid>
            <AbilityScore Name="STR" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Strength" />
            <AbilityScore Name="DEX" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Dexterity" />
            <AbilityScore Name="CON" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Constitution" />
            <AbilityScore Name="INT" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Intelligence" />
            <AbilityScore Name="WIS" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Wisdom" />
            <AbilityScore Name="CHA" ReadOnly=ReadOnly @bind-RawPoints="Creature.AbilityScores.Charisma" />
        </MudGrid>
    </MudItem>
</MudGrid>
