<MudCard Style="height: 100%;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Align="Align.Center">@Title</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Image="@ImagePath" Height="100" />
    <MudCardContent>
        @Body
    </MudCardContent>
    <MudCardActions>
        <MudFileUpload FilesChanged="OnFilesChangedCallback" Style="width: 100%">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Color="Color.Primary"
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Outlined.ImportContacts"
                           FullWidth=true
                           for="@context">
                    Import
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>
    </MudCardActions>
</MudCard>