@using TabletopPowerTools.Maui.Features.Creatures.Shared.CreatureDetail

@if(Open)
{
    <MudDrawer Open=Open Anchor="Anchor.Right" Variant="@DrawerVariant.Temporary" Width="50%" OpenChanged="OpenChanged">
        <MudGrid Spacing="0" Class="pa-4">
            <MudItem xs="12">
                <CreatureDetail CreatureId="CreatureId" />
            </MudItem>
        </MudGrid>
    </MudDrawer>
}



@code {
    [Parameter] public bool Open { get; set; }
    [Parameter] public EventCallback<bool> OpenChanged { get; set; }
    [Parameter, EditorRequired] public int CreatureId { get; set; }
}
