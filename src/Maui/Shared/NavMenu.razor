<MudDrawer Open=Open Elevation="3" Variant=DrawerVariant.Temporary ClipMode=DrawerClipMode.Docked Anchor=Anchor.End OpenChanged=@OnOpenChanged>
    <MudNavMenu>
        <MudNavLink Href="/" Match=NavLinkMatch.All Icon=@Icons.Material.Outlined.CrueltyFree>Creatures</MudNavLink>
        <MudNavLink Href="/combat" Match=NavLinkMatch.Prefix Icon=@Icons.Material.Outlined.AutoFixHigh>Combat</MudNavLink>
        <MudNavLink Href="/user/settings" Match=NavLinkMatch.Prefix Icon=@Icons.Material.Outlined.Settings>Settings</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code 
{
    [Parameter, EditorRequired] public bool Open { get; set; }
    [Parameter, EditorRequired] public EventCallback<bool> OnOpenChanged { get; set; }
}